QMainWindow, QFrame, QDialog, QSplitter
{
	border-radius: 6px;
	background-color: #00cfff;
}

QFrame
{
	border-radius: 6px;
	background-color: #00cfff;
}

QTabBar
{
	color: blue;
	background-color: #ccffff;
}

QMainWindow::separator:hover {background-color: #99ccc;}

QLabel {background-color: transparent;}

/*QProgressBar*************************************************************/
QProgressBar {
     border: 2px solid grey;
     border-radius: 4px;
     background-color: #05B8CC;
     text-align: center;
 }
/*QCheckBox*************************************************************/

/*QLineEdit*************************************************************/
QLineEdit
{
	background-color: white;
	border-radius: 4px;
	border: 1px solid #008B8B;
}
QLineEdit:hover
{
	background-color: white;
	border-radius: 4px;
	border: 2px solid #008B8B;
}

/*QComboBox*************************************************************/
QComboBox
{
	background-color: white;
	border-radius: 4px;
	border: 1px solid #008B8B;
}
QComboBox:hover
{
	background-color: white;
	border-radius: 4px;
	border: 2px solid #008B8B;
}
 QComboBox::down-arrow {
     image: url(:/skin/but-down.png);
 }

 QComboBox::down-arrow:on { /* shift the arrow when popup is open */
